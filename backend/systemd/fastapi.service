[Unit]
Description=FastAPI Microservice for Availability
After=network.target postgresql.service

[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/home/ubuntu/hotel-booking-system/microservices/availability_service
EnvironmentFile=/home/ubuntu/hotel-booking-system/backend/.env
ExecStart=/home/ubuntu/hotel-booking-system/backend/venv/bin/uvicorn main:app --host 127.0.0.1 --port 8001
Restart=always

[Install]
WantedBy=multi-user.target
