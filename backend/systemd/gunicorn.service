[Unit]
Description=Gunicorn daemon for Django
After=network.target

[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/home/ubuntu/hotel-booking-system/backend
ExecStart=/home/ubuntu/hotel-booking-system/backend/venv/bin/gunicorn \
          core.wsgi:application \
          --bind 127.0.0.1:8000 \
          --workers 3 \
          --timeout 120

Restart=always

[Install]
WantedBy=multi-user.target
